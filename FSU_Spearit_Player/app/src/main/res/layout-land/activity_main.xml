<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/title"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#540115"
    android:gravity="center_horizontal|top"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtV_spearit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/fsu_spearit_player"
        android:fontFamily="@font/caesar_dressing"
        android:paddingTop="20dp"
        android:paddingBottom="30dp"
        android:text="@string/fsu_spearit_player"
        android:textColor="#a89c70"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="660dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_war_chant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#c2c2c2"
                android:drawableStart="@drawable/img_play"
                android:text="@string/war_chant" />

            <Button
                android:id="@+id/btn_fight_song"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#C2C2C2"
                android:drawableStart="@drawable/img_play"
                android:text="@string/fsu_fight_song" />

            <Button
                android:id="@+id/btn_victory_song"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#C2C2C2"
                android:drawableStart="@drawable/img_play"
                android:text="@string/fsu_victory_song" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_garnet_gold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#C2C2C2"
                android:drawableStart="@drawable/img_play"
                android:text="@string/garnet_and_gold" />

            <Button
                android:id="@+id/btn_cheer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#C2C2C2"
                android:drawableStart="@drawable/img_play"
                android:text="@string/fsu_cheer" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_fourth_fanfare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#C2C2C2"
                android:drawableStart="@drawable/img_play"
                android:text="@string/_4th_quarter_fanfare" />

            <Button
                android:id="@+id/btn_uprising"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#C2C2C2"
                android:drawableStart="@drawable/img_play"
                android:text="@string/seminole_uprising" />

            <Button
                android:id="@+id/btn_ad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/cs_logo50"
                android:onClick="open"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_cur_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="@string/_0_min_0_sec"
            android:textAlignment="textEnd"
            android:textColor="#A89C70" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="475dp"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp" />

        <TextView
            android:id="@+id/txt_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="10dp"
            android:text="@string/_0_min_0_sec"
            android:textAlignment="textStart"
            android:textColor="#A89C70" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <Button
            android:id="@+id/btn_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#A89C70"
            android:drawableStart="@drawable/img_stop"
            android:text="@string/stop"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/btn_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#A89C70"
            android:drawableStart="@drawable/img_pause"
            android:text="@string/pause"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/btn_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#A89C70"
            android:drawableStart="@drawable/img_play"
            android:text="@string/play"
            tools:ignore="ButtonStyle" />

    </LinearLayout>


</LinearLayout>